@model liveraryIdentity.Models.Resource

@{
    ViewData["Title"] = "Create";
}

@section styles {
    <link rel="stylesheet" href="~/css/training.css" />
}

<div class="main-container1">
    <div class="center-content">
        <br />
        <div class="col-md-10">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="TrainingID" value="@ViewBag.TrainingID" />
                <div class="form-group">
                    @* <label id="mylabel" asp-for="TopicID"></label> *@
                    <input asp-for="TopicID" class ="form-control" value="@ViewBag.TopicID" type="hidden">
                
                    <h1 class="new-training">Add New Resource</h1>
                    <h2 style="color: white; background-color: #290968; border-radius: 5px; padding: 8px; width: 500px;">For Topic: @ViewBag.TopicTitle</h2>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="FilePath" class="control-label"></label>

                    <label class="file-upload-btn">
                        <input asp-for="FilePath" type="file" id="coverImage" class="form-control-new" accept="image/*" onchange="displayFileName()">
                        <i id="uploadIcon" class="fas fa-upload">
                            <i style="font-size: medium; font-family: 'Poppins', sans-serif; font-weight: 200;">
                                Upload File
                            </i>
                        </i>
                        <p id="fileName" style="display:none; color: black"></p>
                    </label>
                    <span asp-validation-for="FilePath" class="text-danger"></span>
                </div>

                <br />
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" style="width: 500px; background-color: #A175FA; text-align: center; border: none;" />
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
