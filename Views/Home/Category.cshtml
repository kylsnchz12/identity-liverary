@model Category

@{
    ViewData["Title"] = "Category Card";
}

<body>
    <div class="category-cover" style="background-image: url('/images/@Url.Content(Model.Thumbnail)');">
        <div class="text-container">
            <h1>@Model.Title</h1>
            <p>
                @Model.Description
            </p>
        </div>
    </div>
    <div class="category-details">
        <h1>Category</h1>
        <div class="category-div" style="background-image: url('/images/@Url.Content(Model.Thumbnail)');">
            <div class="text">@Model.Title</div>
        </div>
    </div>
    <div class="category-details">
        <h1>Available Trainings</h1>
        <div class="scrollable-container3">
            <div class="div-training-row">
                <div class="training-div" style="background-image: url('/images/training2.png');">
                    <div class="upper-row">
                        <div class="title-upper-right">
                            <p class="title-right">Amazon Web Services</p>
                        </div>
                        <div class="text-bottom-left">
                            <h2>AWS Basics</h2>
                            <p>Description of the training course card.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
