@model liveraryIdentity.Models.Training

@{
    ViewData["Title"] = "Create";
}
@section styles {
    <link rel="stylesheet" href="~/css/training.css" />
}

<div class="main-container">
    <form asp-action="Create" class="form-container">
        <div class="left-side">
            <div>
                <h1 class="new-training">Create New Training</h1>
            </div>
            <br>
            <div class="padding-left">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!-- Title -->
                <div>
                    <label id="mylabel" asp-for="Title">Training Title</label>
                    <input class="form-control-new" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Author -->
                <br>
                <div>
                    <label id="mylabel" asp-for="Author">Author</label>
                    <input class="form-control-new" asp-for="Author">
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <!-- Category -->
                <br>
                <div>
                    <label id="mylabel" asp-for="CategoryID">Category</label>
                    <div class="custom-select">
                        <select class="form-control-new" asp-for="CategoryID" asp-items="ViewBag.CategoryID">
                        </select>
                    </div>
                </div>

                <!-- Thumbnail -->
                <br>
                <div>
                    <label for="coverImage" id="mylabel" asp-for="Thumbnail"></label>
                    <label class="file-upload-btn">
                        <input asp-for="Thumbnail" type="file" id="coverImage" class="form-control-new" accept="image/*" onchange="displayFileName()">
                        <i id="uploadIcon" class="fas fa-upload">
                            <i style="font-size: medium; font-family: 'Poppins', sans-serif; font-weight: 200;">
                                Upload photo
                            </i>
                        </i> 
                        <p id="fileName" style="display:none; color: black"></p>
                    </label>
                    <span asp-validation-for="Thumbnail" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <div class="right-container">
            <!-- Description -->
            <div>
                <label id="mylabel" asp-for="Description">Description</label>
                <textarea id="description" class="form-control-new" rows="19" asp-for="Description" style="white-space: normal;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
