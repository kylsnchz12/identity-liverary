@model liveraryIdentity.Models.Topic

@{
    ViewData["Title"] = "Edit";
}

@section styles {
    <link rel="stylesheet" href="~/css/training.css" />
}

<div class="main-container">
    <form form asp-action="Edit" class="form-container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="left-side">
            <div>
                <h1 class="new-training">Edit Topic</h1>
            </div>
            <br>
            <div class="padding-left">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label id="mylabel" asp-for="TrainingID"></label>
                    <input class="form-control-new" value="@Model.TrainingID" readonly>
                    <span asp-validation-for="TrainingID" class="text-danger"></span>
                </div>
                <!-- Title -->
                <div>
                    <label id="mylabel" asp-for="Title"></label>
                    <input class="form-control-new" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <br>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" style="width: 500px; background-color: #A175FA; text-align: center; border: none;"/>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-info" asp-route-trainingId="@Model.TrainingID" style="width: 500px; color: #A175FA; background-color: rgb(245, 239, 245); text-align: center; border: none; margin-top: 5px">Back to List</a>
                </div>
            </div>
        </div>
        <div class="right-container">
            <!-- Description -->
            <div>
                <label id="mylabel" asp-for="Description"></label>
                <textarea id="description" class="form-control-new" rows="19" asp-for="Description" maxlength="1015"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
