@page
@model liveraryIdentity.Views.Topics.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Topic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Topic.ID" />
            <div class="form-group">
                <label asp-for="Topic.TrainingID" class="control-label"></label>
                <select asp-for="Topic.TrainingID" class="form-control" asp-items="ViewBag.TrainingID"></select>
                <span asp-validation-for="Topic.TrainingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.Title" class="control-label"></label>
                <input asp-for="Topic.Title" class="form-control" />
                <span asp-validation-for="Topic.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.Description" class="control-label"></label>
                <input asp-for="Topic.Description" class="form-control" />
                <span asp-validation-for="Topic.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
