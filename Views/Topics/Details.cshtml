@model liveraryIdentity.Models.Topic

@{
    ViewData["Title"] = "Details";
}

<div class="margin-page">
    <h1 class="edit-training">@Html.DisplayFor(model => model.Title)</h1>

    <div>
        <h4 style="padding-left: 12px;">Details</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-10" style="text-align: justify;">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.ID" style="margin: 5px; width: 90px" class="prm-btn">Edit</a>
        <a asp-action="Index" asp-route-trainingId="@Model.TrainingID" style="margin: 5px; width: 120px" class="prm-btn">Back to List</a>
    </div>
</div>