@model LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}

<div class="login-body">
    <div class="main-login">
        <a asp-area="" asp-controller="Home" asp-action="Index">
            <div class="login-logo" style="background-image: url('/images/login_logo.png');"></div>
        </a>
        <h1>Login</h1>
        <form id="form-login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label id="mylabel" asp-for="Email"></label>
                <input asp-for="Email" id="myInput">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label id="mylabel" asp-for="Password"></label>
                <input asp-for="Password" id="myInput" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <br>
            <button id="mybutton" type="submit">Sign in</button>
        </form>
    </div>
    <div class="right-login">
        <div class="login-word" style="background-image: url('/images/logoword.png');"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
