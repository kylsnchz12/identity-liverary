@model RegisterViewModel

@{
    ViewData["Title"] = "Create Account";
}

<div>
    <div class="login-body">
    <div class="main-login">
        <a asp-area="" asp-controller="AdminHome" asp-action="Index" id="create-account">
            <div class="login-logo" style="background-image: url('/images/login_logo.png');"></div>
        </a>
        <h1>Create Account</h1>
        <form id="form-login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label id="mylabel" asp-for="Email"></label>
                <input asp-for="Email" id="myInput">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label id="mylabel" asp-for="Password"></label>
                <input asp-for="Password" id="myInput" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label id="mylabel" asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" id="myInput">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <br>
            <button type="submit" id="mybutton">Create Account</button>
        </form>
    </div>
    <div class="right-login">
        <div class="login-word" style="background-image: url('/images/logoword.png');"></div>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}